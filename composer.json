{
  "name": "jascha030/wp-settings",
  "description": "Library using modern PHP and OOP, to simplify creation of WordPress admin settings pages.",
  "authors": [
    {
      "name": "Jascha030",
      "email": "contact@jaschavanaalst.nl"
    }
  ],
  "keywords": [
    "WordPress",
    "wp-settings",
    "oop",
    "plugin"
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Jascha030\\WpSettings\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jascha030\\WpSettings\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "jascha030/twig-service": "^1.0",
    "php-di/php-di": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "friendsofphp/php-cs-fixer": "^3.6"
  },
  "scripts": {
    "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
    "phpunit": "phpunit --config phpunit.xml"
  }
}
